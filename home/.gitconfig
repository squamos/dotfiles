[user]
	name = Amos Barreto
	email = amos.barreto@gmail.com

[branch]
	autosetuprebase = always

[color]
	diff = auto

[core]
	editor = vim
	excludesfile = ~/.gitignore

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	eum = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
	aum = \
		"!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
